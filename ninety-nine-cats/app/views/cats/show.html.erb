<% cat=@cat %>
<table>
    <thead>
        <tr>
            <th colspan="2"><%= cat.name %> </th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>Color</td>
            <td><%= cat.color %></td>
        </tr>
        <tr>
            <td>Age</td>
            <td><%= cat.age %></td>
        </tr>
        <tr>
            <td>Sex</td>
            <td><%= cat.sex %></td>
        </tr>
        <% if cat.description %>
        <tr>
            <td>Description</td>
            <td><%= cat.description %></td>
        </tr>
        <% end %>
    </tbody>
</table>